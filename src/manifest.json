{
  "manifest_version": 3,
  "name": "Download Box",

  "minimum_chrome_version": "69",
  "default_locale": "en",

  "action": {
    "default_title": "Downloads",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "downloads", "downloads.open", "downloads.shelf"
  ]
}