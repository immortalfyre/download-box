{
  "manifest_version": 3,
  "name": "Download Box",

  "action": {
    "default_title": "Downloads",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ],

  "permissions": [
    "downloads", "downloads.open", "downloads.shelf"
  ]
}